<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>Archetype Created Web Application</display-name>

  <!--CharsetFilter start-->

  <filter>
    <filter-name>CharsetFilter</filter-name>
    <filter-class>com.epam.bookshop.fliter.CharsetFilter</filter-class>
    <init-param>
      <param-name>requestEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>CharsetFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!--Session timeout-->

  <session-config>
      <session-timeout>60</session-timeout>
  </session-config>

  <!--ail params-->

  <context-param>
    <param-name>mail</param-name>
    <!--        <param-value>/WEB-INF/classes/config/mail.properties</param-value>-->
    <param-value>resources/mail.properties</param-value>
  </context-param>

  <!--404 page location-->

  <error-page>
    <error-code>404</error-code>
    <location>/error404.jsp</location>
  </error-page>

  <!--Pages for exceptions-->

  <error-page>
    <exception-type>com.epam.bookshop.exception.EntityNotFoundException</exception-type>
    <location>/error404.jsp</location>
    </error-page>

  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/error500.jsp</location>
  </error-page>
</web-app>
